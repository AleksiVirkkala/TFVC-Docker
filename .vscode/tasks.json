{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "echo",
      "type": "shell",
      "command": "./test.sh",
      "args": ["${input:paska}", "${input:väri}"],
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": true,
        "showReuseMessage": false,
        "echo": false
      }
    }
  ],
  "inputs": [
    {
      "id": "paska",
      "description": "Minkä kokoinen?",
      "type": "pickString",
      "options": ["iso", "pieni"],
      "default": "iso"
    },
    {
      "id": "väri",
      "description": "Minkä värinen?",
      "type": "promptString",
      "default": "punainen"
    }
  ]
}